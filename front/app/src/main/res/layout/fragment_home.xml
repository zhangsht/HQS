<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/homeName"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="内科"/>
    <TextView
        android:id="@+id/homeTime"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignBaseline="@+id/homeName"
        android:text="2016年9月12日"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/homeNext"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_below="@+id/homeName"
        android:src="@mipmap/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="请001到2诊室就诊"
        android:layout_margin="16dp"
        android:id="@+id/textNotification"
        android:layout_toRightOf="@+id/homeNext"
        android:layout_alignBottom="@+id/homeNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="候诊人员: "
        android:id="@+id/homeDistribute"
        android:layout_below="@+id/homeNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TableLayout
        android:id="@+id/homeTable"
        android:layout_margin="16dp"
        android:layout_below="@+id/homeDistribute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="候诊人员: "
